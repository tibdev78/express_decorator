{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "lib": ["ES2018"],
      "target": "es2017",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "experimentalDecorators": true,
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        ".vscode"
    ]
  }  